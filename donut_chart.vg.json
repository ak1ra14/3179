{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A donut chart showing the percentage distribution of mental health disorders in a selected Asian country.",
  "width": 90,
  "height": 150,
  "title": "In Selected Asian Country",
  "background": "#f8f8f3",

  "data": {
    "url": "new_combined.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "SelectedCountry",  
      "value": "Singapore", 
      "bind": {
        "input": "select",  
        "options": ["China","Australia", "India","Singapore", "Thailand", "Indonesia"], 
        "name": "Select a country"  
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Entity == SelectedCountry"  
    },
    {
      "fold": [
        "Schizophrenia (%)", 
        "Bipolar disorder (%)", 
        "Eating disorders (%)", 
        "Anxiety disorders (%)", 
        "Drug use disorders (%)", 
        "Depression (%)", 
        "Alcohol use disorders (%)"
      ],
      "as": ["Disorder", "value"]
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 30,  
    "outerRadius": 70
  },
  "encoding": {
    "theta": {
      "field": "value",
      "type": "quantitative",
      "stack": true  
    },
    "color": {
      "field": "Disorder",
      "type": "nominal",
      "legend": null},
    "tooltip": [
      {"field": "Disorder", "type": "nominal", "title": "Disorder"},
      {"field": "value", "type": "quantitative", "title": "Percentage (%)"}
    ]
  }
}