{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 200,
  "background": "#f8f8f3",
  "data": {
    "url": "new_combined.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "religious/spiritual activities",
        "healthy lifestyle behaviors",
        "work situation,personal relationships",
        "Talked to friends or family",
        "Took prescribed medication",
        "in nature",
        "mental health_professional"
      ],
      "as": ["CopingMethod", "Prevalence"]
    },
    {
      "filter": {
        "field": "Entity",
        "oneOf": [  
          "Albania", "Bahrain", "Bangladesh", "China", "Cyprus",
          "Georgia", "India", "Indonesia", "Iran", "Iraq",
          "Jordan", "Kazakhstan", 
          "Kyrgyzstan", "Laos", "Lebanon", "Malaysia",
          "Mongolia", "Myanmar", "Nepal",  "Philippines", "Saudi Arabia", "South Korea",
          "Sri Lanka", "Thailand", "Timor-Leste",
          "United Arab Emirates", "Uzbekistan",
          "Vietnam"
        ]
      }
    },
    {
      "lookup": "CopingMethod",
      "from": {
        "data": {
          "values": [
            {"original": "religious/spiritual activities", "renamed": "Involved in spiritual activities"},
            {"original": "healthy lifestyle behaviors", "renamed": "Engaged in healthy lifestyle"},
            {"original": "work situation,personal relationships", "renamed": "Improved work situation or personal relationships"},
            {"original": "Talked to friends or family", "renamed": "Talked to friends or family"},
            {"original": "Took prescribed medication", "renamed": "Took prescribed medication"},
            {"original": "in nature", "renamed": "Spent time in nature"},
            {"original": "mental health_professional", "renamed": "Sought help from a mental health professional"}
          ]
        },
        "key": "original",
        "fields": ["renamed"]
      },
      "as": "RenamedCopingMethod"
    }
  ],
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "sort": "ascending"
    },
    "y": {
      "field": "RenamedCopingMethod",
      "type": "nominal",
      "title": "Coping Method",
      "sort": "ascending"
    },
    "color": {
      "field": "Prevalence",
      "type": "quantitative",
      "scale": {
        "domain": [0, 100], 
        "scheme": "blues"
      },
      "title": "Prevalence (%)"
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "RenamedCopingMethod", "type": "nominal", "title": "Coping Method"},
      {"field": "Prevalence", "type": "quantitative", "title": "Prevalence (%)"}
    ]
  }
}